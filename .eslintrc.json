{
    "extends": ["standard", "prettier"],
    "plugins": ["mocha"],
    "env": {
        "mocha": true
    },
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "max-len": ["error", 150, 2],
        "camelcase": [
            "error",
            {
                "ignoreImports": true
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "semi": ["error", "always"],
        "no-plusplus": "off",
        "no-await-in-loop": "off",
        "no-restricted-syntax": "off",
        "no-continue": "off",
        "arrow-body-style": "off",
        "no-loop-func": "off",
        "no-unused-expressions": "off",
        "mocha/no-exclusive-tests": "error",
        "no-console": "error"
    },
    "globals": {
        "assert": true,
        "expect": true,
        "artifacts": true,
        "contract": true,
        "ethers": true
    }
}
